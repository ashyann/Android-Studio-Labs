<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ffffff"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/textViewradio"
        android:hint="nothing happened yet!"
        android:layout_marginTop="39dp"/>

    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textClock"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroup"
        android:layout_alignParentStart="true">

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UnClick"
        android:id="@+id/radioButton2"
        android:checked="false"
        android:onClick="onRadioButtonClicked"
        android:layout_marginTop="90dp"
        android:layout_below="@+id/textClock"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="48dp" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click"
        android:id="@+id/radioButton"
        android:checked="false"
        android:onClick="onRadioButtonClicked"
        android:layout_alignTop="@+id/radioButton2"
        android:layout_alignStart="@+id/textViewradio" />
    </RadioGroup>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I&apos;m a checkbox"
        android:id="@+id/checkBox"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:checked="false"
        android:onClick="onCheckBoxClicked" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/checkboxmessage"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/textViewradio"
        android:layout_marginStart="26dp" />

</RelativeLayout>
