<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#00bcd4"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".WeatherActivity">

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_below="@+id/temperature"
        android:layout_marginTop="52dp"
        android:background="#ffffff"
        android:layout_toEndOf="@+id/weatherapplabel"
        android:layout_alignStart="@+id/weatherapplabel" />

    <ImageView
        android:layout_width="256dp"
        android:layout_height="256dp"
        android:id="@+id/imageView"
        android:layout_below="@+id/weatherapplabel"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/weatherlabel"
        android:textStyle="bold"
        android:textSize="32sp"
        android:fontFamily="sans-serif-thin"
        android:textColor="#ffffff"
        android:id="@+id/weatherapplabel"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/temperature"
        android:textColor="#ffffff"
        android:layout_alignEnd="@+id/spinner"
        android:textSize="28sp"
        android:fontFamily="sans-serif-thin"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView" />

</RelativeLayout>
